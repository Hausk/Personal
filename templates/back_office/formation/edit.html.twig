{% extends "base.html.twig" %}
{% block title %}Edition{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-4">
            {{ form_start(form) }}
                <div class="card">
                    <div class="card-header"><h2 class="h4">Modification</h2></div>
                    <div class="card-body">
                        {{ form_errors(form) }}
                        {{ form_row(form.name) }}
                        {{ form_row(form.level) }}
                    </div>
                <div class="card-footer">
                    <a href="{{ path("formation_manage") }}" class="btn btn-secondary">Annuler</a>
                    <button class="btn btn-primary">Modifier</button>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}